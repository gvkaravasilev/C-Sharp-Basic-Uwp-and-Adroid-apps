<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClickerMania_3._0.MainPage">

    
    <StackLayout Padding="20" BackgroundColor="BlueViolet">
     
        <Label Text="Clicker Mania 3.0" FontSize="Large" />

        <Label Text="Timer" />
        <Entry x:Name="Timer" Text="0" />
      
        <Label Text="Clicks" />
        <Entry x:Name="Clicks" Text="0" />
       
        <Label Text="Clicks Per Minute" />
        <Entry x:Name="CPM" Text="0" />
       
        <Button Text="Click" Clicked="Button_Clicked"/>

    </StackLayout>

</ContentPage>
